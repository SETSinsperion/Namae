<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_main_w_sun"
    tools:context="com.insperion.sets.namae.view.NameTranslationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:id="@+id/ll_complete_name">

                    <TextView
                        android:id="@+id/tv_reference"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ntr_your_name"
                        android:textSize="22sp"
                        android:textColor="@color/secondary_text"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/material_bounds"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.FloatingActionButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:layout_margin="@dimen/fab_margins"
                            app:fabSize="normal"
                            app:backgroundTint="@color/colorPrimaryDark"
                            app:srcCompat="@drawable/ic_volume_up_black_24dp"
                            android:id="@+id/fab_speak_complete_name" />

                        <TextView
                            android:text="@string/ntr_speak_complete_name"
                            style="@style/textview_primary_wgravity_style"
                            android:layout_gravity="left|center_vertical"
                            android:id="@+id/txt_speak_complete_name" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:padding="10dp"
                        android:text="@string/ntr_greetings"
                        android:textSize="22sp"
                        android:textColor="@color/secondary_text"
                        android:gravity="center"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.FloatingActionButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:layout_margin="@dimen/fab_margins"
                            app:fabSize="normal"
                            app:backgroundTint="@color/colorPrimaryDark"
                            app:srcCompat="@drawable/ic_volume_up_black_24dp"
                            android:id="@+id/fab_greeting_1" />

                        <TextView
                            android:text="@string/ntr_greeting_1"
                            style="@style/textview_primary_wgravity_style"
                            android:layout_gravity="left|center_vertical"
                            android:id="@+id/txt_greeting_1" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.FloatingActionButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:layout_margin="@dimen/fab_margins"
                            app:fabSize="normal"
                            app:backgroundTint="@color/colorPrimaryDark"
                            app:srcCompat="@drawable/ic_volume_up_black_24dp"
                            android:id="@+id/fab_greeting_2" />

                        <TextView
                            android:text="@string/ntr_greeting_2"
                            style="@style/textview_primary_wgravity_style"
                            android:layout_gravity="left|center_vertical"
                            android:id="@+id/txt_greeting_2" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.FloatingActionButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:layout_margin="@dimen/fab_margins"
                            app:fabSize="normal"
                            app:backgroundTint="@color/colorPrimaryDark"
                            app:srcCompat="@drawable/ic_volume_up_black_24dp"
                            android:id="@+id/fab_greeting_3" />

                        <TextView
                            android:text="@string/ntr_greeting_3"
                            style="@style/textview_primary_wgravity_style"
                            android:layout_gravity="left|center_vertical"
                            android:id="@+id/txt_greeting_3" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">



                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
